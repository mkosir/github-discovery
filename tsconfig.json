{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "compilerOptions": {
    "noEmit": true,
    "outDir": "compiled",
    "baseUrl": "src",
    "paths": {
      ".": ["."]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "jsx": "preserve",
    "target": "ES6"
  },
  "exclude": [
    "node_modules",
    ".next",
    ".turbo",
    "coverage",
    "dist",
    "compiled",
    "build-next-static",
    "build-storybook-static"
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".eslintrc.js"]
}
